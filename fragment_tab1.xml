<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab1Fragment"
    android:background="@drawable/background">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/nodonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Donations made yet"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:fontFamily="@font/josefin_sans"
        android:letterSpacing="0.09"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/fragpro1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progressbg"
        android:progressTint="#ffc200"
        android:visibility="invisible"/>
</FrameLayout>